@model ProdutoListViewModel

@foreach (var p in Model.Produtos)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            <a asp-action="Details" asp-route-id="@p.ProdutoID">@p.Nome </a>
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@p.Preco.ToString("c")</small>
            </span>
            @p.Descricao
        </h4>
</div>
<div class="card-text p-1">@p.Descricao</div>
<div class="card-text p-1">@p.Fabricante.Nome</div>
</div>
}
<div page-model= "@Model.PagingInfo" paging-action ="List" page-classes-enabled ="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>